<%= javascript_include_tag 'new' %>
<%= stylesheet_link_tag "style" %>
<div class="login-box">
<%= form_with scope: :employee, url: employees_path, model: @post, :html => {:id => "reg"}, local: true do |form| %>

<h1><center><b>Employee data</b></center></h1>


<table align="center">
	<tr>

		<td><%= form.label :Name  %></td>
		<td><%= form.text_field :name, id:"name" %></td>
		<td id="error"></td>
	</tr>
	<tr>
		<td><%= form.label :DOB %></td>
		<td><%= form.date_field :DOB, id:"DOB" %></td>
		<td id="error1"></td>
	</tr>
	<tr>
		<td><%= form.label :salary %></td>
		<td><%= form.text_field :salary, id:"salary" %></td>
		<td id="error2"></td>
	</tr>
	<tr>
		<td><%= form.label :designation %></td>
		<td><%= form.text_field :designation, id:"designation" %></td>
		<td id="error3"></td>
	</tr>
	<tr>
    <td colspan="3"><%= form.submit %></td>
	</tr>
	<tr>
	<td colspan="3"><%= link_to 'Back', employees_path %></td>
</table>
</div>
<% end %>


